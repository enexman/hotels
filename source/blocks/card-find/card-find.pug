include ../group-dropdown-date/group-dropdown-date.pug
include ../dropdown-buttons/dropdown-buttons.pug
include ../dropdown/dropdown.pug
include ../button-big/button-big.pug

mixin card-find()
	form.card-find.js-card-find
		h2.card-find__title Найдём номера под ваши пожелания
		.card-find__date-picker
			+group-dropdown-date({titleLeft: 'прибытие', titleRight: 'выезд', placeholder: 'ДД.ММ.ГГГГ'})
		.card-find__guests
			+dropdown-buttons({
				title: 'Гости',
				status: 'default',
				values: [
					{ title: 'взрослые', num: 0},
					{ title: 'дети', num: 0},
					{ title: 'младенцы', num: 0}
				]
			})
		+button-big({title: 'подобрать номер'})
