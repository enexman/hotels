include ../card-calendar/card-calendar.pug

mixin filter-dropdown-date(parameters)
	- const { title } = parameters

	.filter-dropdown-date
		if title
			p.filter-dropdown__title #{title}
		input(type="text" placeholder="ДД.МММ - ДД.МММ" readonly class="datepicker-here").filter-dropdown-date__input.js-filter-dropdown-date__input
		.filter-dropdown-date__calendar
			+card-calendar()