include ../components/text-field/text-field.pug

mixin list(values)
	ul.footer-ui__list
		each val, index in values
			if(index === 0)
				li.footer-ui__item.footer-ui__item--title #{val}
			else
				li.footer-ui__item #{val}

mixin footer-ui()
	footer.footer-ui
		.footer-ui__wrapper
			.footer-ui__logo
				include ../components/logo/logo.pug
				p.footer-ui__description Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
			.footer-ui__lists
				+list(['Navigation', 'About Us', 'News', 'Support', 'Products'])
				+list(['ABOUT US', 'Who we are', 'Our team', 'Careers', 'Investors'])
				+list(['Support', 'Documentation', 'Community', 'Get in Touch'])

			.footer-ui__subscribe
				h3.footer-ui__subscribe-tittle Subscribe to our newsletter
				p.footer-ui__subscribe-description Receive our latest news and promotions in your inbox!
				+textField('email', 'Your email address', '', '', 'subscription')
		.footer-ui__line
		.footer-ui__bottom
			p.footer-ui__copyright Copyright Â© 2018 Toxin UI Kit. All rights reserved.
			include ../socials/socials.pug
