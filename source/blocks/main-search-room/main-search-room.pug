include  ../../variables/variables.pug
include ../card-hotel/card-hotel.pug
include ../filter-dropdown-date/filter-dropdown-date.pug
include ../dropdown/dropdown.pug
include ../dropdown-buttons/dropdown-buttons.pug
include ../range/range.pug
include ../checkbox-buttons/checkbox-buttons.pug
include ../checkbox-list/checkbox-list.pug

main.main-search-room
	section.main-search-room__filter
		+filter-dropdown-date({title: 'даты пребывания в отеле'})
		.main-search-room__dropdown
			+dropdown-buttons({
				title: 'Гости',
				status: 'default',
				values: dropdownFE,
				id: 'drop-first'
			})
		+range({
			title: 'диапазон цены',
			text: '5 000₽ - 10 000₽',
			description: 'Стоимость за сутки пребывания в номере',
			id: 'slider-range'
		})
		.main-search-room__checkbox-buttons
			+checkbox-buttons({title: 'Checkbox Buttons', values: checkboxButtons})
		+checkbox-buttons({title: 'Доступность', values: richCheckboxButtons})
		.main-search-room__dropdown-bottom
			+dropdown({
				text: 'комнаты',
				title: 'удобства номера',
				values: dropdownFE2,
				id: 'drop-fe'
			})
		+checkbox-list({id: 'checkbox-first', values: checkboxList, title: 'дополнительные удобства'})
	section.main-search-room__rooms
		p.main-search-room__title Номера, которые мы для вас подобрали
		.main-search-room__list
			each val in hotels
				.main-search-room__item
					+card-hotel(val)
		.main-search-room__pagination
			include ../pagination/pagination.pug
