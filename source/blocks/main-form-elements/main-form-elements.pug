						+formEmail('subscription text field')
				.main-form-elements__col
					+checkbox-buttons('Checkbox Buttons', checkboxButtons)
					.main-form-elements__corrector.main-form-elements__corrector--5
						+radio('test', 'Radio Buttons', [{text: 'Мужчина', checked: true}, {
							text: 'Женщина',
							checked: false
						}])
					include ../toggles/toggles.pug
					include ../like-buttons/like-buttons.pug
					include ../rate-buttons/rate-buttons.pug
