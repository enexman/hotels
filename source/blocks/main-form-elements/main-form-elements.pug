include ../dropdown-buttons/dropdown-buttons.pug

main.main-form-elements
	.main-form-elements__wrapper
		.main-form-elements__container
			.main-form-elements__col
				+textField('email', 'Email', '', 'Text Field', 'default')
				.main-form-elements__text-field
					+textField('email', 'Email', 'This is pretty awesome', 'Text Field', 'Hover / Focus')
				+dropdownButtons('Сколько гостей', 'Dropdown', 'default', dropdownFE, 'drop-1')
				.main-form-elements__masked-text-field
					+textField('text', 'ДД.ММ.ГГГГ', '', 'masked text field', 'default')
				div(id="form-dropdown-date")
					+groupDropdownDate('ДД.ММ.ГГГГ', '19.08.2019', 'date Dropdown', 'date Dropdown')
				.main-form-elements__filter
					+filterDropdownDate('19 авг - 23 авг', 'filter date dropdown')
				+formEmail('subscription text field')
			.main-form-elements__col
				+checkbox-buttons('Checkbox Buttons', checkboxButtons)
				.main-form-elements__radio
					+radio('test', 'Radio Buttons', [{text: 'Мужчина', checked: true}, {
						text: 'Женщина',
						checked: false
					}])
				include ../toggles/toggles.pug
				include ../like-buttons/like-buttons.pug
				include ../rate-buttons/rate-buttons.pug
			.main-form-elements__col
				+range('Range Slider', '5 000₽ - 10 000₽', 'Стоимость за сутки пребывания в номере')
				include ../buttons/buttons.pug
				.main-form-elements__pagination
					+title-3lvl('Pagination')
					include ../components/pagination/pagination.pug
			.main-form-elements__col
				.main-form-elements__dropdown
					+dropdownJS('2 спальни, 2 кровати...', 'Dropdown', 'default', dropdownFE2, 'dropJS')
					+dropdown('2 спальни, 2 кровати...', 'Dropdown', 'expanded', true, dropdownFE2, '', 'medium')
			.main-form-elements__col
				+dropdownButtonsUI('Сколько гостей', 'Dropdown', '', true, dropdownFE, 'drop-2')
			.main-form-elements__col
				+dropdownButtonsUI('3 гостя', 'Dropdown', '', true, dropdownFE3, 'drop-3')
			.main-form-elements__col
				+checkbox-list(false, checkboxListFE, 'expandable checkbox list')
				.main-form-elements__checkbox
					+checkbox-list(true, checkboxListFE, 'expandable checkbox list')
			.main-form-elements__col
				.main-form-elements__list-buttons
					+checkbox-buttons('Rich Checkbox Buttons', richCheckboxButtons)
			.main-form-elements__col
				.main-form-elements__list-buttons
					+bullet-list('bullet list', bulletList)
			.main-form-elements__col
				+self-element("/img/insert-emoticon.svg", 'Комфорт', 'Шумопоглощающие стены')
				+self-element("/img/location-city.svg", 'Удобство', 'Окно в каждой из спален')
			.main-form-elements__auto
				.main-form-elements__review
					+review('/img/murad.png', 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', 12, true)
