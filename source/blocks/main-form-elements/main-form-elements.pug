					+range('Range Slider', '5 000₽ - 10 000₽', 'Стоимость за сутки пребывания в номере')
					include ../buttons/buttons.pug
					.main-form-elements__pagination
						+title-3lvl('Pagination')
						include ../components/pagination/pagination.pug
			.main-form-elements__row
				.main-form-elements__col
					.main-form-elements__corrector.main-form-elements__corrector--6
						+dropdown('2 спальни, 2 кровати...', 'Dropdown', 'default', false, dropdownFE, '', 'medium')
						+dropdown('2 спальни, 2 кровати...', 'Dropdown', 'expanded', true, dropdownFE2, '', 'medium')
				.main-form-elements__col
					+dropdown('Сколько гостей', 'Dropdown', '', true, dropdownFE, true, 'wide')
				.main-form-elements__col
					+dropdown('3 гостя', 'Dropdown', '', true, dropdownFE3, true, 'wide')
			.main-form-elements__row
				.main-form-elements__col
					+checkbox-list(false, checkboxListFE, 'expandable checkbox list')
					.main-form-elements__corrector.main-form-elements__corrector--7
						+checkbox-list(true, checkboxListFE, 'expandable checkbox list')
				.main-form-elements__col
					.main-form-elements__corrector.main-form-elements__corrector--8
						+checkbox-buttons('Rich Checkbox Buttons', richCheckboxButtons)
				.main-form-elements__col
					.main-form-elements__corrector.main-form-elements__corrector--8
						+bullet-list('bullet list', bulletList)
			.main-form-elements__row
				.main-form-elements__col
					+self-element("/img/insert-emoticon.svg", 'Комфорт', 'Шумопоглощающие стены')
					+self-element("/img/location-city.svg", 'Удобство', 'Окно в каждой из спален')
				.main-form-elements__col.main-form-elements__col--auto
					.main-form-elements__corrector.main-form-elements__corrector--9
						+review('/img/murad.png', 'Мурад Сарафанов', '5 дней назад', 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', 12, true)
